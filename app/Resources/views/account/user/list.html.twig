{% extends 'base.html.twig' %}
{% block pagecontent %}           
    <div class="row"> 
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="dashboard_graph">

                <div class="row x_title">
                    <div class="col-md-6">
                        <h3>{{pagetitle}}</h3>
                    </div>
                    <div class="col-md-6">

                    </div>
                </div>
                <br />
                <br />
                <div class="col-md-12 col-sm-12 col-xs-12" id='partnerlist'>
                    {% if users is not empty %}
                        <table class="table table-bordered table-condensed table-striped">
                            <thead>
                                <tr><th>S/N</th><th>Full Name</th><th>Date Created</th><th>Status</th><th>Action</th></tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{loop.index}}</td>
                                        <td>{{user.getUserFullName('s, f o')}}</td>
                                        <td>{{user.getUserDetail().getDateCreated()|date('d/M/Y')}}</td>
                                        <td>{{user.getUserDetail().getStatus()|capitalize}}</td>
                                        <td>
                                            {% if(user.getUserDetail().getStatus()!='notready') %}
                                            <button type="button" class="btn btn-info btn-sm" id='togglestatus'>
                                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> {{(user.getUserDetail().getStatus()=='active')?('Deactivate'):('Activate')}}
                                            </button>
                                            {% endif %}
                                            {% if(user.getUserDetail().getStatus()=='notready') %}
                                                <button type="button" class="btn btn-danger btn-sm" id='remove'>
                                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 
                                                </button>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="alert alert-warning" role="alert">No Record Found!</div>
                    {% endif %}
                    <a href="{{path('createuser')}}" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add New User
                    </a>

                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
{% endblock %}
{% block script %}
    {{ parent() }}
    <script type='text/javascript'>
    </script>
{% endblock %}